<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/rv_path"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/selector"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/breadcrumb_rv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_toStartOf="@+id/add_the_shortcut"
            android:layout_marginEnd="8dp"
            android:background="?attr/rv_path"
            android:paddingStart="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/add_the_shortcut"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:paddingStart="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_add_the_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textColor="#bcbec0"
                android:textSize="15dp"
                />
            <ImageView
                android:id="@+id/add_icon"
                android:layout_width="22dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_file_add_shortcut"
                android:layout_height="22dp"/>

        </LinearLayout>

<!--        <TextView-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:text="Name"-->
<!--             />-->

        <com.simplemobiletools.commons.views.MyRecyclerView
            android:id="@+id/item_list_rv"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_recent_file"
            app:layoutManager="com.simplemobiletools.commons.views.MyLinearLayoutManager"
            />
        <!--<include
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            layout="@layout/layout"


            android:id="@+id/bottomnavigation"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:visibility="gone"/>-->



    </RelativeLayout>



