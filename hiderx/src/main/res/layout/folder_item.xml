<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    >

    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_select"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:elevation="3dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/img_folder"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/folder"
            app:tint="@color/btn_blue"
            />

        <ImageView
            android:id="@+id/img_documents"
            android:layout_width="56dp"
            android:layout_height="56dp"
            />

        <com.editor.hiderx.RoundCornerImageView
            android:id="@+id/file_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            app:corner_radius="@dimen/spacing8"
            />

        <RelativeLayout
            android:id="@+id/img_audio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:elevation="1dp"
            android:background="@drawable/button_background_login"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_audio"
                app:tint="@color/white"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image"
        android:layout_marginStart="16dp"
        >
        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Photos"
            android:maxLines="2"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folder_name"
            android:textColor="@color/white"
            android:text="30 items | 5Gb"
            android:textSize="12sp"
            />
    </RelativeLayout>

</RelativeLayout>