<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:clipToPadding="false"
    android:padding="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.editor.hiderx.RoundCornerImageView
        android:id="@+id/selection_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:corner_radius="16dp"
        android:src="@drawable/image_selected_layer"
        android:visibility="gone"
        android:elevation="3dp"
        />

    <com.editor.hiderx.RoundCornerImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:corner_radius="16dp"
        />

    <RelativeLayout
        android:id="@+id/rl_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing24"
        android:background="@color/translucent_black"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing8"
            android:layout_marginBottom="2dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/spacing8"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_select"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:elevation="@dimen/spacing4"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>