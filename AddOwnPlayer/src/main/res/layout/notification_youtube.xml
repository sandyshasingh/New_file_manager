    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/youtube_noti">

        <ImageView
            android:id="@+id/thumbnail"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:background="@drawable/rectangle_round_corner"
            android:src="@drawable/music_place_holder"
            android:layout_marginStart="3dp"
            android:layout_height="90dp" />
        <RelativeLayout
            android:layout_marginStart="@dimen/spacing16"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:paddingTop="@dimen/spacing8"
            android:layout_height="match_parent">
           <!-- <TextView
                android:textColor="@color/material_gray_600"
                android:id="@+id/video"
                android:textSize="@dimen/text_small"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:text="YouTube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
-->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />
           <!-- <TextView
                android:layout_marginTop="4dp"
                android:textColor="@color/material_gray_600"
                android:id="@+id/author"
                android:textSize="@dimen/text_small"
                android:singleLine="true"
                android:scrollHorizontall;="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_previous_black"
                    android:id="@+id/previous_video"
                    android:visibility="visible"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pause_black"
                    android:id="@+id/pause_play_video"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:id="@+id/next_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerInside"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_play_next"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/stop_service"
        android:src="@drawable/ic_close_black_36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/spacing16"
        android:layout_marginStart="16dp"
    />
    </LinearLayout>
