<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/holder"
    tools:context=".PlayerActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_back_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:elevation="4dp"
        />
       <!-- <ImageView
            android:id="@+id/img_backGround"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            />-->
        <com.rocks.addownplayer.RoundCornerImageview
            android:id="@+id/img_thumbnail"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/music_place_holder"
            />
        <TextView
            android:id="@+id/songName"
            android:layout_marginTop="20dp"
            android:layout_below="@id/img_thumbnail"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:layout_below="@id/songName"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:textColor="@color/material_gray_200"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_artist"
        android:layout_above="@+id/rl_controller"
        >
        <TextView
            android:id="@+id/tv_left"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_gray_200"
            android:layout_marginStart="16dp"
            />
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_right"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_gray_200"
            android:text="00:00"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/rl_controller"
        >
        <ImageView
            android:id="@+id/img_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:id="@+id/img_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toStartOf="@id/img_play_pause"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_skip_previous_white_36dp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:id="@+id/img_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/img_play_pause"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_skip_next_white_36dp"
            />
    </RelativeLayout>

</RelativeLayout>